\begin_inset Formula 
\[
\expectedValue\left(X^{2}\right)\exeq{\text{מטענה מהכיתה}}\sum_{x\in\real}x^{2}\cdot\probability\left(X=x\right)\exeq{Supp\left(\probability\right)=\natural}\sum_{n=1}^{\infty}n^{2}\cdot\probability\left(X=n\right)=\sum_{n=1}^{\infty}n^{2}\cdot\left(1-p\right)^{n-1}\cdot p=\sum_{n=1}^{\infty}\frac{n^{2}}{2^{n}}\longrightarrow\infty
\]

\end_inset


\end_layout

